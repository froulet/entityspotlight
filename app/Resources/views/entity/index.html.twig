{% extends 'base.html.twig' %}

{% block body %}

<div class="section no-pad-bot  blue-grey lighten-5" id="index-banner">

    <div class="container">

    <h1>Entity list</h1>


                <div class="row">
                <th>Identity</th>
                <th>Title</th>
                <th>Type</th>
                <th>Description</th>
                <th>Imglink</th>
                <th>Actions</th>
                </div>

        {% for entity in entities %}
                <div class="row">
                <div class="col s2">
                <a href="{{ path('entity_show', { 'id': entity.idEntity }) }}">{{ entity.idEntity }}</a>
                </div>
                <div class="col s2">
                {{ entity.title }}
                </div>
                <div class="col s2">
                {{ entity.type |slice(0, 10) ~ '...'}}
                </div>
                <div class="col s2">
                {{ entity.description |slice(0, 50) ~ '...' }}
                </div>
                <div class="col s3">
                <a href="{{ path('entity_show', { 'id': entity.idEntity }) }}" class="waves-effect waves-light btn">show</a>
                   
                <a href="{{ path('entity_edit', { 'id': entity.idEntity }) }}" class="waves-effect waves-light btn">edit</a>
                </div>
            
        </div>
    
        {% endfor %}




            <a href="{{ path('entity_new') }}">Create a new entry</a>
        </div>
    </div>
{% endblock %}
